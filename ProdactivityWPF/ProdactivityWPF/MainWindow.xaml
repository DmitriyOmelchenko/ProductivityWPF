<Window x:Class="ProdactivityWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdactivityWPF"
        mc:Ignorable="d"
        Title="Prodactivity" Height="350" Width="525.994">
    <Grid>

        
        <Grid.RowDefinitions>
            <RowDefinition  Height="45"> </RowDefinition>
            <RowDefinition  Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="OpenFile" Margin="10"  Grid.Row="0" Click="OpenFile_Click">Open productivity report file</Button>    
        <ListBox x:Name="Result" Grid.Row="1" HorizontalAlignment="Stretch"></ListBox>
    </Grid>
</Window>
